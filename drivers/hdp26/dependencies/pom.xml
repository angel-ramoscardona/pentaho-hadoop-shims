<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.pentaho</groupId>
    <artifactId>pentaho-parent-pom</artifactId>
    <version>9.0.0.0-SNAPSHOT</version>
  </parent>
  <groupId>org.pentaho</groupId>
  <artifactId>pentaho-hadoop-hdp26-driver</artifactId>
  <version>9.0.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <properties>
    <!--<shim.name>hdp26</shim.name>-->
    <!--<shim.type>HDP</shim.type>-->
    <bundle.export.version>9.0.0.0.hdp26</bundle.export.version>
    <pentaho-osgi-bundles.version>9.0.0.0-SNAPSHOT</pentaho-osgi-bundles.version>
    <shim-bundle-plugin.version>1.0</shim-bundle-plugin.version>
    <vendor-driver.version>2.6.0.0.hdp</vendor-driver.version>
    <pentaho-code.version>11.0.0.0</pentaho-code.version>

    <org.apache.hadoop.version>2.7.3.2.6.0.3-8</org.apache.hadoop.version>
    <!-- default folder -->
    <!--<org.xerial.snappy.version>1.1.1.3</org.xerial.snappy.version>-->
    <!--<automaton.version>1.11-8</automaton.version>-->
    <pig.version>0.16.0.2.6.0.3-8</pig.version>
    <!--<joda-time.version>2.9.2</joda-time.version>-->
    <!--<org.antlr.version>3.5.2</org.antlr.version>-->
    <parquet.version>1.8.1</parquet.version>

    <!--<gateway-shell>0.12.0.2.6.0.3-8</gateway-shell>-->
    <dependency.pig.classifier>h2</dependency.pig.classifier>
    <org.apache.oozie.version>4.2.0.2.6.0.3-8</org.apache.oozie.version>
    <sqoop.version>1.4.6.2.6.0.3-8</sqoop.version>
    <org.apache.hive.version>1.2.1000.2.6.0.3-8</org.apache.hive.version>
    <!--<hive-storage-api.version>2.1.1.3-pre-orc</hive-storage-api.version>-->
    <org.apache.avro.version>1.8.0</org.apache.avro.version>
    <!--<hadoop-aws.version>2.7.3</hadoop-aws.version>-->
    <!-- client and default folders -->

    <!-- pmr folder -->
    <org.apache.hbase.version>1.1.2.2.6.0.3-8</org.apache.hbase.version>
    <!--<zookeeper.version>3.4.6.2.6.0.3-8</zookeeper.version>-->
    <!--<htrace-core.version>2.04</htrace-core.version>-->
    <!--<protobuf-java.version>2.5.0</protobuf-java.version>-->
    <org.apache.orc.version>1.2.3</org.apache.orc.version>
  </properties>
  <dependencies>

    <dependency>
      <groupId>com.pentaho</groupId>
      <artifactId>shim-bundle-plugin</artifactId>
      <version>${shim-bundle-plugin.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-mapreduce-client-core</artifactId>
      <version>${org.apache.hadoop.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-yarn-api</artifactId>
      <version>${org.apache.hadoop.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-common</artifactId>
      <version>${org.apache.hadoop.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.orc</groupId>
      <artifactId>orc-core</artifactId>
      <version>${org.apache.orc.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.avro</groupId>
      <artifactId>avro</artifactId>
      <version>${org.apache.avro.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.parquet</groupId>
      <artifactId>parquet-hadoop-bundle</artifactId>
      <version>${parquet.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.sqoop</groupId>
      <artifactId>sqoop</artifactId>
      <version>${sqoop.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.pig</groupId>
      <artifactId>pig</artifactId>
      <version>${pig.version}</version>
      <classifier>${dependency.pig.classifier}</classifier>
    </dependency>
    <dependency>
      <groupId>org.apache.oozie</groupId>
      <artifactId>oozie-client</artifactId>
      <version>${org.apache.oozie.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hive</groupId>
      <artifactId>hive-jdbc</artifactId>
      <version>${org.apache.hive.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hadoop</groupId>
      <artifactId>hadoop-hdfs</artifactId>
      <version>${org.apache.hadoop.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hbase</groupId>
      <artifactId>hbase-server</artifactId>
      <version>${org.apache.hbase.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hbase</groupId>
      <artifactId>hbase-client</artifactId>
      <version>${org.apache.hbase.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.hbase</groupId>
      <artifactId>hbase-common</artifactId>
      <version>${org.apache.hbase.version}</version>
    </dependency>

  </dependencies>
  <build>
    <plugins>

      <plugin>
        <groupId>com.pentaho</groupId>
        <artifactId>shim-bundle-plugin</artifactId>
        <version>${shim-bundle-plugin.version}</version>
        <configuration>
          <resolverFilters>
            <resolverFilter>
              <include>
                *:hadoop-mapreduce-client-core,*:hadoop-yarn-api,*:hadoop-common,*:orc-core,*:avro,
                *:parquet-hadoop-bundle,*:sqoop,*:oozie-client,*:hive-jdbc,*:hadoop-hdfs,
                *:hbase-server,*:hbase-client,*:hbase-common
              </include>
              <exclude>
                *:*log4j*,*:xml-apis,*:xercesImpl
              </exclude>
              <transitive>true</transitive>
            </resolverFilter>
            <resolverFilter>
              <include>
                *:pig
              </include>
              <transitive>false</transitive>
            </resolverFilter>
          </resolverFilters>
        </configuration>
        <executions>
          <execution>
            <phase>prepare-package</phase>
            <goals>
              <goal>resolve</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Bundle-Version>${pentaho-osgi-bundles.version}</Bundle-Version>
            <Vendor-Driver-Version>${vendor-driver.version}</Vendor-Driver-Version>
            <Pentaho-Code-Version>${pentaho-code.version}</Pentaho-Code-Version>
            <!--<DynamicImport-Package>*</DynamicImport-Package>-->
            <Import-Package>
            </Import-Package>
            <_exportcontents>
              com.cloudera.sqoop;version=${vendor-driver.version},
              org.apache.avro;version=${vendor-driver.version},
              org.apache.avro.file;version=${vendor-driver.version},
              org.apache.avro.generic;version=${vendor-driver.version},
              org.apache.avro.io;version=${vendor-driver.version},
              org.apache.avro;version=${vendor-driver.version},
              org.apache.avro.util;version=${vendor-driver.version},
              <!--
              org.apache.commons.configuration;version=${vendor-driver.version},
              org.apache.commons.configuration.reloading;version=${vendor-driver.version},
              org.apache.commons.io;version=${vendor-driver.version},
              org.apache.commons.lang;version=${vendor-driver.version},
              org.apache.commons.logging;version=${vendor-driver.version},
              org.apache.commons.vfs2;version=${vendor-driver.version},
              org.apache.commons.vfs2.impl;version=${vendor-driver.version},
              org.apache.commons.vfs2.provider;version=${vendor-driver.version},
              -->
              org.apache.hadoop.conf;version=${vendor-driver.version},
              org.apache.hadoop.filecache;version=${vendor-driver.version},
              org.apache.hadoop.fs;version=${vendor-driver.version},
              org.apache.hadoop.fs.permission;version=${vendor-driver.version},
              org.apache.hadoop.hbase.client;version=${vendor-driver.version},
              org.apache.hadoop.hbase.filter;version=${vendor-driver.version},
              org.apache.hadoop.hbase;version=${vendor-driver.version},
              org.apache.hadoop.hbase.io.compress;version=${vendor-driver.version},
              org.apache.hadoop.hbase.io;version=${vendor-driver.version},
              org.apache.hadoop.hbase;version=${vendor-driver.version},
              org.apache.hadoop.hbase.mapred;version=${vendor-driver.version},
              org.apache.hadoop.hbase;version=${vendor-driver.version},
              org.apache.hadoop.hbase.util;version=${vendor-driver.version},
              org.apache.hadoop.hive.common.type;version=${vendor-driver.version},
              org.apache.hadoop.hive.ql.exec.vector;version=${vendor-driver.version},
              org.apache.hadoop.hive.serde2.io;version=${vendor-driver.version},
              org.apache.hadoop.io;version=${vendor-driver.version},
              org.apache.hadoop.io.compress;version=${vendor-driver.version},
              org.apache.hadoop.mapred;version=${vendor-driver.version},
              org.apache.hadoop.mapred;version=${vendor-driver.version},
              org.apache.hadoop.mapreduce.lib.input;version=${vendor-driver.version},
              org.apache.hadoop.mapreduce.lib.output;version=${vendor-driver.version},
              org.apache.hadoop.mapreduce;version=${vendor-driver.version},
              org.apache.hadoop.mapreduce.task;version=${vendor-driver.version},
              org.apache.hadoop.net;version=${vendor-driver.version},
              org.apache.hadoop.security;version=${vendor-driver.version},
              org.apache.hadoop.util;version=${vendor-driver.version},
              org.apache.hadoop.yarn.api.records;version=${vendor-driver.version},
              org.apache.hive.jdbc;version=${vendor-driver.version},
              org.apache.oozie.client;version=${vendor-driver.version},
              org.apache.orc;version=${vendor-driver.version},
              org.apache.parquet.column;version=${vendor-driver.version},
              org.apache.parquet.format.converter;version=${vendor-driver.version},
              org.apache.parquet.hadoop.api;version=${vendor-driver.version},
              org.apache.parquet.hadoop;version=${vendor-driver.version},
              org.apache.parquet.hadoop.metadata;version=${vendor-driver.version},
              org.apache.parquet.io.api;version=${vendor-driver.version},
              org.apache.parquet.schema;version=${vendor-driver.version},
              org.apache.pig.backend.hadoop.datastorage;version=${vendor-driver.version},
              org.apache.pig;version=${vendor-driver.version},
              org.apache.pig.impl;version=${vendor-driver.version},
              org.apache.pig.impl.util;version=${vendor-driver.version},
              org.apache.pig.tools.grunt;version=${vendor-driver.version},
              org.apache.pig.tools.parameters;version=${vendor-driver.version},
              org.apache.pig.tools.pigscript.parser;version=${vendor-driver.version},
              org.apache.pig.impl;version=${vendor-driver.version},
              org.apache.pig.tools.parameters;version=${vendor-driver.version},

              org.apache.sqoop;version=${vendor-driver.version},
              com.fasterxml.jackson.databind;version=${vendor-driver.version},
              com.fasterxml.jackson.databind.node;version=${vendor-driver.version},
              <!--
              org.osgi.framework;version=${vendor-driver.version},
              -->
              org.slf4j;version=${vendor-driver.version},
              parquet.column;version=${vendor-driver.version},
              parquet.format.converter;version=${vendor-driver.version},
              parquet.hadoop.api;version=${vendor-driver.version},
              parquet.hadoop;version=${vendor-driver.version},
              parquet.hadoop.metadata;version=${vendor-driver.version},
              parquet.io.api;version=${vendor-driver.version},
              parquet.schema;version=${vendor-driver.version},
              org.apache.oozie.client;version=${vendor-driver.version}
            </_exportcontents>
            <Embed-Dependency>*</Embed-Dependency>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
